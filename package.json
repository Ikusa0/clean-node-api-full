{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --silent --noStackTrace --runInBand --passWithNoTests",
    "test:verbose": "jest --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit.config.js",
    "test:integration": "npm test -- --watch -c jest-integration.config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky install && husky add .husky/pre-commit 'npx lint-staged' && husky add .husky/commit-msg '.git/hooks/commit-msg $1' husky add .husky/pre-push 'npm run test:ci'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.4.0",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.11.18",
    "@types/validator": "^13.7.15",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "git-commit-msg-linter": "^4.5.0",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "lint-staged": "^13.1.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "mongodb": "^5.5.0",
    "validator": "^13.9.0"
  },
  "config": {
    "mongodbMemoryServer": {
      "systemBinary": "/usr/bin/mongod"
    }
  }
}
